{
  "src": ".",
  "out": "${annoMods}/${modName}",  
  "converter": [
    {
      "action": "static",
      "pattern": "data/**/*.{cfg,ifo,prp,fc,rdm,dds}"
    },
    {
      "action": "static",
      "pattern": "{data/config/**/*,banner.png,README.md}"
    },
    {
      "action": "cf7",
      "pattern": "data/**/*.cf7"
    },
    {
      "action": "texture",
      "pattern": "data/**/icons/*.png",
      "lods": 1
    },
    {
      "action": "texture",
      "pattern": "data/**/*_{diff,norm,height,metal,mask}.png",
      "lods": 3,
      "changePath": "maps/"
    },
    {
      "action": "gltf",
      "pattern": "data/**/*.gltf",
      "lods": 5,
      "changePath": "rdm/",
      "animPath": "anim/"
    },
    {
      "action": "cfgyaml",
      "pattern": "data/**/*.cfg.yaml"
    },
    {
      "action": "modinfo",
      "content_en": true
    }
  ],
  "modinfo": {
    "Version": "1.2",
    "ModID": "jakob_small_malls",
    "IncompatibleIds": [],
    "ModDependencies": [],
    "Category": {
      "English": "Gameplay"
    },
    "ModName": {
      "English": "Commercial Street",
      "German": "Commercial Street"
    },
    "Description": {
      "English": "README.md",
      "German": "README.md"
    },
    "KnownIssues": null,
    "DLCDependencies": [
      {
      "DLC": "HighLife",
      "Dependant": "required"
    }],
    "CreatorName": "Jakob",
    "CreatorContact": "https://github.com/jakobharder/anno-1800-jakobs-mods",
    "Image" : null
  }
}